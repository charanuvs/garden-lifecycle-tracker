@model IEnumerable<GardenTracker.Domain.Entities.UserCrop>

@{
    ViewData["Title"] = "Archived Crops";
}

<div class="container mt-4">
    <h1 class="mb-4">üì¶ @ViewData["Title"]</h1>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">&larr; Back to My Garden</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No archived crops</h5>
            <p>You haven't archived any crops yet.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var crop in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-secondary">
                        <div class="card-header bg-light">
                            <h5>@crop.Nickname</h5>
                            <small class="text-muted">@crop.CropDefinition.Name</small>
                        </div>
                        <div class="card-body">
                            <p><strong>Started:</strong> @crop.StartDate.ToShortDateString()</p>
                            @if (crop.CompletedDate.HasValue)
                            {
                                <p><strong>Archived:</strong> @crop.CompletedDate.Value.ToShortDateString()</p>
                            }
                            <p>
                                <span class="badge bg-secondary">Archived</span>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@crop.Id" class="btn btn-outline-primary btn-sm mb-2 w-100">
                                View History
                            </a>
                            <form asp-action="Unarchive" method="post" onsubmit="return confirm('Are you sure you want to restore this crop?');">
                                <input type="hidden" name="id" value="@crop.Id" />
                                <button type="submit" class="btn btn-success btn-sm w-100">
                                    ‚ôªÔ∏è Restore
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
